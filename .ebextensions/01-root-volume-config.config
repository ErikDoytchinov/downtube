option_settings:
  aws:autoscaling:launchconfiguration:
    RootVolumeType: gp3
    RootVolumeSize: 20  # Optional: Set the desired volume size in GiB
    # Optional: Set IOPS and Throughput for gp3 volumes
    RootVolumeIOPS: 3000    # Valid values: 3000 to 16000
    RootVolumeThroughput: 125  # Valid values: 125 to 1000